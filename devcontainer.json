{
    "name": "ETL Development",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "airflow-webserver",
    "workspaceFolder": "/opt/airflow",
    "shutdownAction": "none",
    "remoteUser": "airflow",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": false,
            "installOhMyZsh": true,
            "installOhMyZshConfig": true,
            "upgradePackages": true,
            "username": "airflow",
            "userUid": "50000",
            "userGid": "0",
            "nonFreePackages": false
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "cweijan.vscode-postgresql-client2"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/home/airflow/.venv/bin/python",
                "python.analysis.extraPaths": [
                    "/opt/spark/python/lib/py4j-0.10.9.7-src.zip",
                    "/opt/spark/python"
                ]
            }
        }
    },
    "forwardPorts": [5432, 4566, 8080, 7077, 8081],
    "postCreateCommand": "python -m venv /home/airflow/.venv && /home/airflow/.venv/bin/pip install --upgrade pip && /home/airflow/.venv/bin/pip install dbt-postgres psycopg2-binary s3fs pandas pyarrow pyspark==3.5.3",
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/home/airflow/.venv/bin"
    }
}